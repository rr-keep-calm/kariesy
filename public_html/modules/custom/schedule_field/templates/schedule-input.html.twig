            <div class="clinik-select-element">
                <label for="mo_firstSchedule" style="">Понедельник</label>
                <select name="mo_firstSchedule">
                    <option value="" disabled selected>--Выберите клинику--</option>
                    {% for nid, clinic in element.clinics %}
