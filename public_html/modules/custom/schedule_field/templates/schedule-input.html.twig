{{ attach_library('schedule_field/jquery-ui-custom') }}
<div class="schedule">
    <input{{ attributes }} />

    {# Выводим поля выбора времени первого графика работы #}
    <div class="first-schedule-block">
        <label>Первая смена</label>
        <input class="first-start-time" type="text" name="first-start-time" data-autoclose="true" readonly> -
        <input class="first-end-time" type="text" name="first-end-time" data-autoclose="true" readonly>
