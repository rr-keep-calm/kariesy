            <a href=""><img src="{{ directory }}/img/insta.svg" alt=""></a>
            <a href=""><img src="{{ directory }}/img/youtube.svg" alt=""></a>
        </div>
    </form>

    <button type="button" class="forms_close popup-close"></button>
</div>

<div class="forms __ok mfp-hide" id="form-call-ok">
    <div class="form">
        <div class="form_image">
            <img src="{{ directory }}/img/ico/ok.svg" width="59" alt="">
        </div>
        <p class="form_ok">Ваш вызов принят!</p>
    </div>

    <button type="button" class="forms_close popup-close"></button>
